{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@typeholes/tserr-arktype": ["packages/tserr-arktype/src/index.ts"],
      "@typeholes/tserr-common": ["packages/tserr-common/src/index.ts"]
    },
    "noErrorTruncation": true
  },
  "exclude": ["node_modules", "tmp"]
}
